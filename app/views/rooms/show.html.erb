<h1>ROOM SHOW</h1>
<%= image_tag @room.image %>
<%= @room.type_of_room %>
<%= @room.capacity %>
<%= @room.price %>
<script>
  flatpickr(".flatpickr", {
    enableTime: true,
    dateFormat: "Y-m-d H:i",
    minDate: "today"
  });
</script>
<%= simple_form_for [@hotel, @room, @room, @booking], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :arrival_date, as: :date, input_html: { data: { flatpickr_target: "startTime" } } %>
  <%= f.input :departure_date, as: :date, input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' } %>
  <%= f.submit 'Schedule your appointment' %>
<% end %>

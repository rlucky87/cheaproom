<h1>ROOM SHOW</h1>
<%= image_tag @room.image %>
<%= @room.type_of_room %>
<%= @room.capacity %>
<%= @room.price %>
<script>
  flatpickr(".flatpickr", {
    enableTime: true,
    dateFormat: "Y-m-d H:i",
    minDate: "today"
  });
</script>
<%= simple_form_for [@hotel, @room, @booking] do |f| %>
                  <%= f.input :departure_date, html5: true %>
                  <%= f.input :arrival_date, html5: true %>
                  <%= f.submit "Reservez un sejour inoubliable", class: "button"  %>
                <% end %>
